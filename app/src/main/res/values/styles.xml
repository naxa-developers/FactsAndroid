<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="feed_bold_text" parent="TextAppearance.AppCompat.Body1">


    </style>

    <style name="Feed.Widget.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="contentPaddingLeft">13dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPaddingTop">9dp</item>

    </style>

    <style name="Feed.Widget.CardView.Survey" parent="Feed.Widget.CardView">
        <item name="cardUseCompatPadding">true</item>
        <item name="cardCornerRadius">2dp</item>

    </style>

    <style name="Feed.Widget.Showcase.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:padding">4dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">1dp</item>

    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Body1">

        <item name="android:textSize">14sp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Card" parent="Text.Title">
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Detail" parent="Text.Title">

        <item name="android:textSize">14sp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Text.Title.Survey" parent="TextAppearance.AppCompat.Body1">

        <item name="android:textSize">16sp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="Text.Desc" parent="TextAppearance.AppCompat.Body1">
        <item name="android:layout_marginLeft">13dp</item>
        <item name="android:layout_marginTop">9dp</item>
        <item name="android:layout_marginRight">35dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">4</item>
        <item name="android:ellipsize">end</item>
        <item name="android:padding">@dimen/padding_small</item>

    </style>


    <style name="Text.Desc.Survey" parent="Text.Desc">

        <item name="android:textSize">16sp</item>
        <item name="android:minLines">2</item>
        <item name="android:maxLines">100</item>
        <item name="android:ellipsize">end</item>

    </style>

    <style name="Text.Compound" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#fff</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginBottom">13dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Text.Compound.Share" parent="Text.Compound">
        <item name="android:drawableLeft">@drawable/ic_share_24dp</item>
        <item name="android:drawableStart">@drawable/ic_share_24dp</item>
    </style>

    <style name="Text.Compound.Date" parent="Text.Compound">
        <item name="android:drawableLeft">@drawable/ic_date_range_24dp</item>
        <item name="android:drawableStart">@drawable/ic_date_range_24dp</item>
    </style>


    <style name="Text.Compound.Bookmark" parent="Text.Compound">
        <item name="android:drawableLeft">@drawable/ic_bookmark_border_black_24dp</item>
        <item name="android:drawableStart">@drawable/ic_bookmark_border_black_24dp</item>
    </style>

    <style name="Text.Compound.Saved" parent="Text.Compound">
        <item name="android:drawableLeft">@drawable/ic_like_stateful</item>
        <item name="android:drawableStart">@drawable/ic_like_stateful</item>
    </style>

    <style name="Text.Compound.Count" parent="Text.Compound">
        <item name="android:drawableLeft">@drawable/ic_heart_filled_24dp</item>
        <item name="android:drawableStart">@drawable/ic_heart_filled_24dp</item>
    </style>

    <style name="Feed.Widget.Chip" parent="@style/Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/colorAccent</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="android:textColor">#fff</item>
        <item name="checkedIcon">@drawable/ic_check_white_24dp</item>
    </style>


    <style name="Feed.Widget.Chip.Orange" parent="@style/Feed.Widget.Chip">
        <item name="chipBackgroundColor">@color/orange</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="android:textColor">#fff</item>
        <item name="checkedIcon">@drawable/ic_check_white_24dp</item>
    </style>

    <style name="Feed.Widget.Chip.Green" parent="@style/Feed.Widget.Chip">
        <item name="chipBackgroundColor">@color/green</item>
        <item name="chipCornerRadius">4dp</item>
        <item name="android:textColor">#fff</item>
        <item name="checkedIcon">@drawable/ic_check_white_24dp</item>
    </style>

    <style name="HeaderImage">
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="Text.Title.Bold" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">14dp</item>
    </style>


    <style name="Poll.Button" parent="Widget.MaterialComponents.Button">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
    </style>

    <style name="Text.Survey.Question" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="RadioGroup.Survey.Question" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:padding">@dimen/margin_small</item>
    </style>



    <style name="chip_button_style"  parent="@style/Feed.Widget.Chip">
        <item name="android:background">@drawable/button_state</item>
        <!--<item name="android:textSize">@dimen/text_size</item>-->
        <!--<item name="android:padding">@dimen/padding_button</item>-->
        <item name="android:textColor">@color/white_80</item>

    </style>


    <style name="Widget.Facts.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Widget.Facts.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/productGridBackgroundColor</item>
        <item name="android:theme">@style/AppTheme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Facts.Toolbar</item>
    </style>


    <style name="TextAppearance.Facts.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>

    <color name="orange">#E67E22</color>
    <color name="green">#16A085</color>
    <dimen name="padding_small">8dp</dimen>
    <dimen name="padding_large">16dp</dimen>
</resources>
